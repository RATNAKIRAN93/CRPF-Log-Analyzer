# CRPF Log Analyzer - Environment Configuration
# Copy this file to .env and fill in the values

# ============================================================
# OpenSearch Configuration
# ============================================================

# OpenSearch version
OPENSEARCH_VERSION=2.9.0

# OpenSearch Java memory settings (adjust based on available RAM)
# Recommendation: Set to 50% of available RAM, max 32GB
OPENSEARCH_JAVA_OPTS=-Xms512m -Xmx512m

# ============================================================
# Elasticsearch Configuration (for ELK stack)
# ============================================================

# Elastic Stack version
ELASTIC_VERSION=9.1.4

# Elasticsearch Java memory settings
ES_JAVA_OPTS=-Xms512m -Xmx512m

# Elasticsearch superuser password
# IMPORTANT: Change this in production!
ELASTIC_PASSWORD=changeme

# Logstash internal user password
LOGSTASH_INTERNAL_PASSWORD=changeme

# Kibana system user password
KIBANA_SYSTEM_PASSWORD=changeme

# Beats system user password
BEATS_SYSTEM_PASSWORD=changeme

# ============================================================
# Kafka Configuration
# ============================================================

# Kafka broker ID
KAFKA_BROKER_ID=1

# Kafka Java memory settings
KAFKA_HEAP_OPTS=-Xms256m -Xmx256m

# ============================================================
# Network Configuration
# ============================================================

# Central server IP (replace with your server's IP)
CENTRAL_SERVER_IP=192.168.1.100

# OpenSearch/Elasticsearch port
OPENSEARCH_PORT=9200

# Kibana/OpenSearch Dashboards port
DASHBOARDS_PORT=5601

# Logstash Beats input port
LOGSTASH_PORT=5044

# Kafka broker port
KAFKA_PORT=9092

# FastAPI port
API_PORT=8000

# ============================================================
# Wazuh Configuration (if using Wazuh)
# ============================================================

# Wazuh manager API credentials
WAZUH_API_USER=wazuh
WAZUH_API_PASSWORD=changeme

# Wazuh indexer password
WAZUH_INDEXER_PASSWORD=changeme

# ============================================================
# Index Configuration
# ============================================================

# Main log index name
OPENSEARCH_INDEX=system-logs

# Index retention (days)
INDEX_RETENTION_DAYS=90

# ============================================================
# Feature Flags
# ============================================================

# Disable security for development (set to false in production)
DISABLE_SECURITY=true

# Enable debug logging
DEBUG_MODE=false
